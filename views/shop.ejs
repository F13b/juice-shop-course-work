<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/shop-page.css">
    <link rel="stylesheet" href="/header.css">
    <link rel="stylesheet" href="/footer.css">
    <link rel="icon" type="images/png" href="/leaf-icon.png"/>
    <title>Shop</title>
</head>
<body>
    <%- include('./partials/header.ejs') %>

    <div class="content">
        <div class="product-cards-container">
            <% if (juice.length) {%>
                <% juice.forEach(({id, Name, Price}) => { %>
                    <div class="product-card">
                        <a href="/shop/<%= id %>" class="card-product-link">
                            <img src="/tiger-milk.svg" alt="<%= Name %>" class="card-product-image"/>
                            <h2 class="card-product-name"><%= Name %></h2>
                            <h4 class="card-product-price">&#x20bd; <%= Price %></h4>
                        </a>
                        <button type="button" class="card-product-add-to-card">Add to cart</button>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>

    <%- include('./partials/footer.ejs') %>
</body>
</html>