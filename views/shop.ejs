<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/shop-page.css">
    <link rel="stylesheet" href="/header.css">
    <link rel="stylesheet" href="/footer.css">
    <link rel="icon" type="images/png" href="/logo.svg"/>
    <title>Shop</title>
</head>
<body>
    <header class="header">
        <div class="logo-activities">
            <div class="logo">
                <a href="/main" class="home-link link">
                    <img src="/logo.svg" alt="logotype" class="logo-img">
                </a>
            </div>
            <div class="activities">
                <ul class="activities-list">
                    <li class="acivities-item"><a href="/shop" class="acivities-item-link link">Shop</a></li>
                </ul>
            </div>
        </div>
        <div class="acount-activities">
            <a href="/cart" class="cart-link">
                <div class="cart-block">
                    <img src="/cart-logo.svg" alt="cart" class="cart-logo">
                </div>
            </a>
            <% if (hasToken) { %>
                <div class="account-block-icon">
                    <a href="/account" class="account-link link">acc</a>
                </div>
            <% } else { %>
                <div class="account-block">
                    <a href="/signin" class="account-link link">Sign in</a>
                </div>
            <% } %>
        </div>
    </header>

    <div class="content">
        <% if (juice.length) {%>
            <% juice.forEach(({id, Name, Price, Images}) => { %>
                <div class="product-cards-container">
                    <div class="product-card">
                        <a href="/shop/<%= id %>" class="card-product-link">
                            <img src="data:<%=Images.contentType%>;base64,
                            <%=Images.data.toString('base64')%>" alt="<%= Name %>" class="card-product-image"/>
                            <h2 class="card-product-name"><%= Name %></h2>
                            <h4 class="card-product-price">&#x20bd; <%= Price %></h4>
                        </a>
                        <button type="button" class="card-product-add-to-card" data-id="<%= id %>">Add to cart</button>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="no-products-container">
                <h1 class="no-products">Sorry, it looks like there are no products in the store right now... (˘･_･˘)</h1>
                <div class="logistics-man">
                    <canvas class="rive-logistic" id="canvas" width="500" height="500" style="background: #fff"></canvas>
                </div>
            </div>
        <% } %>
    </div>

    <footer class="footer">
        <ul class="footer-description list">
            <li class="description-section">
                <div class="address-block">
                    <h3 class="first-section-title">Get in touch</h3>
                    <h3 class="address-block-title">Address</h3>
                    <p class="address-block-text">Store & Office <br/> 234 Lekki Epe express way</p>
                </div>
                <div class="office-hour">
                    <h3 class="address-block-title">Office Hour</h3>
                    <p class="address-block-text">Monday - Sunday <br/> 10.00 - 18.00</p>
                </div>
            </li>
            <li class="description-section">
                <div class="Service-center">
                    <h3 class="address-block-title">Service Center</h3>
                    <p class="address-block-text">0811-233-8899</p>
                </div>
                <div class="customer-service">
                    <h3 class="address-block-title">Customer Service</h3>
                    <p class="address-block-text">0811-235-9988</p>
                </div>
                <div class="social-links">
                    <ul class="social-links-list list">
                        <li class="social-link-item">
                            <a href="https://www.facebook.com/" target="_blank" class="social-link"><img src="/Facebook.svg" alt="social" class="social-link-img"></a>
                        </li>
                        <li class="social-link-item">
                            <a href="https://www.instagram.com/" target="_blank" class="social-link"><img src="/Instagram.svg" alt="social" class="social-link-img"></a>
                        </li>
                        <li class="social-link-item">
                            <a href="https://www.twitter.com/" target="_blank" class="social-link"><img src="/Twitter.svg" alt="social" class="social-link-img"></a>
                        </li>
                        <li class="social-link-item">
                            <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ" target="_blank" class="social-link"><img src="/Youtube.svg" alt="social" class="social-link-img"></a>
                        </li>
                    </ul>
                </div>
            </li>
            <li class="description-section">
                <div class="useful-link">
                    <h3 class="usefull-link-title">Usefull Link</h3>
                    <ul class="usefull-link-list list">
                        <li class="usefull-link-item">Reform Juice</li>
                        <li class="usefull-link-item">Order & Shipping</li>
                        <li class="usefull-link-item">Tracking Order</li>
                        <li class="usefull-link-item">About Us</li>
                        <li class="usefull-link-item">Repair</li>
                        <li class="usefull-link-item">Terms</li>
                        <li class="usefull-link-item">FAQ</li>
                    </ul>
                </div>
            </li>
        </ul>
        <img src="/orange.svg" alt="orange" class="middle-orange">
    </footer>
    
    <script src="https://unpkg.com/@rive-app/canvas@1.0.47"></script>
    <script>
        new rive.Rive({
            src: "/1-delivery.riv",
            canvas: document.getElementById("canvas"),
            autoplay: true
        });
    </script>
</body>
</html>